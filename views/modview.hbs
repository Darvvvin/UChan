<!-- Moderator View -->

<script type="text/javascript" src="/js/uchan.datatables.js"></script>

<div class="row p-2 mt-2" style="margin: auto">

  <nav class="col-sm-1 card mod-nav shadow-sm">
    <div class="card-body">
      <h3><b>MODChan</b></h3> <hr>
      <div class="">
        <a href="#" class="select mod-items"> Boards </a> <br>
        <a href="#reports" class="select mod-items"> Reported Posts </a> <br>
        <a href="#moderator" class="select mod-items"> Moderators </a> <br>
        <a href="#banned" class="select mod-items"> Banned IPs </a> <br>
      </div>
    </div>
  </nav>

  <div class="col">

    <h2>Boards</h2>
    <a href="/ufo" class="select" style="font-size: 20pt;">
      /UFO
    </a>
    <hr>
    <h2 id="reports">Reported Posts</h2>
    <table id="reportTable" class="display">
      <thead>
          <tr>
              <th>Post #ID</th>
              <th>Board</th>
              <th># Law</th>
              <th># Off-Topic</th>
              <th># Spam</th>
          </tr>
      </thead>
      <tbody>
        {{#each reportedPosts}}
          <tr>
              <td>{{postNumber}}</td>
              <td>{{board}}</td>
              <td>{{lawCounter}}</td>
              <td>{{offTopicCounter}}</td>
              <td>{{spamCounter}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <hr>

    <h2 id="moderator">Moderators</h2>
    <table id="moderatorTable" class="display">
      <thead>
          <tr>
              <th>Username</th>
              <th>Board List</th>
          </tr>
      </thead>
      <tbody>
          <tr>
              <td>Row 1 Data 1</td>
              <td>Row 1 Data 3</td>
          </tr>
      </tbody>
    </table>
    <hr>

    <h2 id="banned">Banned IPs</h2>
    <table id="bannedTable" class="display">
      <thead>
          <tr>
              <th>IP #</th>
              <th>Reason</th>
          </tr>
      </thead>
      <tbody>
          <tr>
              <td>Row 1 Data 1</td>
              <td>Row 1 Data 2</td>
          </tr>
          <tr>
              <td>Row 2 Data 1</td>
              <td>Row 2 Data 2</td>
          </tr>
      </tbody>
    </table>
    <hr>

  </div>
</div>

<div class="modal fade" id="reportDataModal" tabindex="-1" role="dialog" aria-labelledby="reportDataModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reportDataModal-Title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <b>Post Number:</b> <span id="reportDataModal-PostN"></span><br>
          <b>Law Counter:</b>  <span id="reportDataModal-Board"></span><br>
          <b>Spam Counter:</b> <span id="reportDataModal-Law"></span><br>
          <b>Off-Topic Counter:</b> <span id="reportDataModal-Off"></span><br>
          <b>Spam Counter:</b> <span id="reportDataModal-Spam"></span><br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger">Ban IP</button>
      </div>
    </div>
  </div>
</div>
