<div id="{{postNumber}}p" class="card post-thread shadow-sm p-0 mt-3 p-3" id="" aria-expanded="true">
	<a href="javascript:;"><img href="javascript:;" src="/postimgs/{{image}}" onclick="toggleImage({{postNumber}})" id="{{postNumber}}" title="{{imageDisplayName}}" style="max-width: 300px;"></a>

	<div class="ml-3">
		<a href="#" style="text-align: right; color: red !important;">[X]</a> <span><b>{{name}} (You)</b> {{created}}
			<a href="javascript:;" class="thread-quote" onclick="showReply({{postNumber}})">
				<u>No.{{postNumber}}</u>
			</a>
			| Q:
			{{#each quotes}}
				<a href="#{{this}}p" onmouseover="highlightReply({{this}})" onmouseout="exitHighlight({{this}})">
				>>{{this}}
				</a>
			{{/each}}
		</span> <a href="#" style="right: 20px; position: absolute;">-</a> <br>
		<span style="white-space: pre-line;">{{text}}</span> <br>
	</div>
</div>

<!--HBS INFO TO PUT-->
<!--
	{{quotes}} - array of postNumbers referencing post
		literally just an array of integers

	{{imageDisplayName}} - the image's original filename given by the user.
		different from {{image}}, that gets how it's represented in the backend
-->
