<div class="card post-thread shadow-sm p-0 mt-3 p-3" id="" aria-expanded="true" id="{{postNumber}}p">
	<a href="#"><img src="/postimgs/{{image}}" onclick="toggleImage({{postNumber}})" id="{{postNumber}}" title="{{imageDisplayName}}" style="max-width: 300px;"></a>

	<div class="ml-3">
		<span><b>{{name}}</b> {{created}}
			<a href="#" class="thread-quote" onclick="showReply({{postNumber}})">
				<u>No.{{postNumber}}</u>
			</a>
			|
			{{#each quotes}}
				<a href="#{{this}}p" class="thread-quote">
				<u>>>{{this}}</u>
				</a>
			{{/each}}
		</span> 
	<a href="#" style="right: 20px; position: absolute;">-</a>
		<br>
		{{text}}
		<br>
	</div>
</div>

<!--HBS INFO TO PUT-->
<!--
	{{quotes}} - array of postNumbers referencing post
		literally just an array of integers
	
	{{imageDisplayName}} - the image's original filename given by the user. 
		different from {{image}}, that gets how it's represented in the backend
-->