<div class="modal fade" id="reportModalCenter" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">

    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Report Thread</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form>

      <div class="modal-body">
        <label for="reportModal">Post #</label>
        <input type="text" class="form-control" id="reportModal" placeholder="Enter post number" readonly>

        <div class="form-group">
          <label for="ruleSelect">What rule did this post break?</label>
          <select class="form-control" id="ruleSelect">
            <option>Illegal Posts</option>
            <option>2</option>
            <option>3</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-custom select" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success select">Report</button>
      </div>

      </form>

    </div>
  </div>
</div>
