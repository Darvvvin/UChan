<div class="post-thread" id="{{postNumber}}p">
	<a href="javascript:;"><img src="/postimgs/{{image}}" onclick="toggleImage({{postNumber}})" id="{{postNumber}}" title="{{imageDisplayName}}" style="max-width: 300px;" class="mr-3 mb-2"></a>
	<div>

		{{#if isOwner}}
			<a href="javascript:;" id="d_{{postNumber}}" style="color: red !important;" onclick="deleteConfirmation({{postNumber}})">[X]</a> |

			<span id="dc_{{postNumber}}" style="display: none;"><b>Delete?</b>
				<a href="javascript:;" onclick="document.getElementById('delete_{{postNumber}}_form').submit()" class="text-danger" style="color: red !important;">Yes</a>
				<a href="javascript:;" onclick="deleteConfirmation({{postNumber}})">No</a> |
			</span>

			<form action="/deletePost" method="POST" id="delete_{{postNumber}}_form" name="delete_{{postNumber}}_form" style="display: none;">
				<textarea id="postNumber" name="postNumber" cols="20" rows="20" style="display:none;">{{postNumber}}</textarea>
			</form>
		{{/if}}

		<span><b>{{name}} {{#if isOwner}}(You){{/if}}</b> {{created}}
			<a href="#" class="thread-quote" onclick="showReply({{postNumber}})">
				<u>No.{{postNumber}}</u>
			</a>
			|
			{{#each quotes}}
				<a href="#{{this}}p" onmouseover="highlightReply({{this}})" onmouseout="exitHighlight({{this}})">
				@{{this}}
				</a>
			{{/each}}
		</span> <br>

		<span style="white-space: pre-line;">{{text}}</span>
	</div>
</div>

<hr>

<!--
	{{noOfPosts}} - number of replies the post has
	{{noOfImages}} - number of images inside the post (excluding the main posts image)
	{{uniqueIps}} - number of replies with unique ips

	{{quotes}} - array of postNumbers referencing post (also applies to post-reply.hbs)
		literally just an array of integers

	{{imageDisplayName}} - the image's original filename given by the user.
		different from {{image}}, that gets how it's represented in the backend
-->
