<!-- Login page for Moderators -->

<div class="container mt-5">
  <h1><i>XeroxThis</i></h1>
  	<div class="card shadow-sm">
  	  <div class="card-body">
        <form>
          <b>Moderator Registration Key</b>
          <div class="form-group mb-1 mt-2">
            <input id="key_register" class="form-control" placeholder="dQw4w9WgXcQ">
          </div>

          <b>Moderator ID</b>
          <div class="form-group mb-1 mt-2">
            <input id="id_register" class="form-control" placeholder="Moderator ID">
          </div>

          <b>Password</b>
          <div class="form-group mb-1 mt-2">
            <input id="password_register" class="form-control" type="password">
          </div>

          <b>Repeat Password</b>
          <div class="form-group mb-1 mt-2">
            <input id="password_repeat" class="form-control" type="password">
          </div>

          <a href="#">Register as Moderator</a>
        </form>
	    </div>
  	</div>
</div>
