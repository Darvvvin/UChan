<!-- Login page for Moderators -->

<div class="container mt-5">
  <h1><i>XeroxThat</i></h1>
  	<div class="card shadow-sm">
  	  <div class="card-body">
        <div id="error" style="color: red; font-weight: bold;" class="mt-2"></div>
        <form id="form-register" name="form-register" method="POST" action="/xeroxed">
          <b>Moderator Registration Key</b>
          <div class="form-group mb-1 mt-2">
            <input id="key-register" name="key-register" class="form-control" placeholder="e.g. dQw4w9WgXcQ">
          </div>

          <b>Moderator ID</b>
          <div class="form-group mb-1 mt-2">
            <input id="id-register" name="id-register" class="form-control" placeholder="Moderator ID">
          </div>

          <b>Password</b>
          <div class="form-group mb-1 mt-2">
            <input id="password-register" name="password-register" class="form-control" type="password">
          </div>

          <b>Repeat Password</b>
          <div class="form-group mb-1 mt-2">
            <input id="password-repeat" name="password-repeat" class="form-control" type="password">
          </div>

          <input type="submit" id="xeroxThatSubmit" value="Register as Moderator" class="select btn btn-custom w-100 mt-1">
        </form>
	    </div>
  	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="successModalFinally" tabindex="-1" role="dialog" aria-labelledby="successModalFinally" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="successModalFinallyTitle">Success</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Successfully Created An Account
      </div>
      <div class="modal-footer">
        <button type="button"  id="successModalClose" class="btn btn-custom select"><a href="/xeroxthis">Go to Login</a></button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/uchan.regvalidate.js"></script>
